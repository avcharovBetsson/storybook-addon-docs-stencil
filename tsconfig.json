{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "types": [],
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/node_modules", "src/*.test.ts"]
}
